<body id="home">
    <div class="wrapper">
        <div class="header">
            <div class="container">
                <div class="row">
                    <div class="col-md-2 col-sm-2">
                        <div class="logo"><a href="~/Home/Index"><img src="~/Content/User/images/logo2xoa.png" alt="DC COFFEE"></a></div>
                    </div>
                    <div class="col-md-10 col-sm-10">
                        <div class="header_top">
                            <div class="row">
                                <div class="col-md-3">
                                    <ul class="option_nav"> 
                                        <li class="dorpdown">
                                            <a href="#">VI</a>
                                            <ul class="subnav">
                                                <li><a href="#">Eng</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                </div>
                                <div class="col-md-3">
                                    <ul class="usermenu">
                                        @if (Session["Id"] != null)
                                        {
                                        <li><a href="@Url.Action("Logout", "Session_user")">Đăng Xuất</a></li>
                                            
                                        }
                                        else
                                        {
                                            <li><a href="/dangnhap/dangnhap" class="log">Đăng Nhập</a></li>
                                            <li><a href="/dangnhap/dangnhap" class="reg">Đăng Ký</a></li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="header_bottom">
                            <ul class="option">
                                <li id="search" class="search">
                                    <form><input class="search-submit" type="submit" value=""><input class="search-input" placeholder="Enter your search term..." type="text" value="" name="search"></form>
                                </li>
                                <li class="option-cart">
                                    <a href="/giohangtest/index" class="cart-icon">cart <span class="cart_no"></span></a>
                                   
                                </li>
                            </ul>
                            <div class="navbar-header"><button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button></div>
                            <div class="navbar-collapse collapse">
                                <ul class="nav navbar-nav">
                                    <li><a href="~/Home/Index">Trang chủ</a></li>
                                    <li><a href="~/DanhMuc/Index">Danh mục</a></li>
                                    <li><a href="~/LienHe/Index">Liên hệ</a></li>
                                    @if (Session["Id"] != null)
                                    {
                                        <li><a href="/CaNhan/Sua">Cá nhân</a></li>

                                    }
                                    else
                                    {
                                        <li><a href="/DangNhap/DangNhap">Cá nhân</a></li>
                                    }

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="hom-slider">
            <div class="container">
                <div id="sequence">
                    <div class="sequence-prev"><i class="fa fa-angle-left"></i></div>
                    <div class="sequence-next"><i class="fa fa-angle-right"></i></div>
                    <ul class="sequence-canvas">
                        <li class="animate-in">
                            <div class="flat-caption caption1 formLeft delay300 text-center"><span class="suphead">20 Năm Chúng Mình</span></div>
                            <div class="flat-caption caption2 formLeft delay400 text-center">
                                <h1>Ngon đậm chất Phin</h1>
                            </div>
                            <div class="flat-caption caption3 formLeft delay500 text-center">
                                <p>.<br>20K</p>
                            </div>
                            <div class="flat-button caption4 formLeft delay500 text-center"><a class="more" href="#">More Details</a></div>
                            <div class="flat-image formBottom delay200" data-duration="5" data-bottom="true"><img src="~/Content/User/images/sl4.jpg" alt=""></div>
                        </li>
                        <li>
                            <div class="flat-caption caption2 formLeft delay400">
                                <h1>Đã Có Mặt Gần Bạn</h1>
                            </div>
                            <div class="flat-caption caption3 formLeft delay500">
                                <h2>.<br>Ghé qua nhà DC ngay nào</h2>
                            </div>
                            <div class="flat-button caption5 formLeft delay500"><a class="more" href="#">More Details</a></div>
                            <div class="flat-image formBottom delay200" data-bottom="true"><img src="~/Content/User/images/sl5.jpg" alt=""></div>
                        </li>
                        <li>
                            <div class="flat-caption caption2 formLeft delay400 text-center">
                                <h1>Ngọt ngào và tươi mát</h1>
                            </div>
                            <div class="flat-caption caption3 formLeft delay500 text-center">
                                <p>. <br>Sự tươi mới là đặc sản của chúng tôi </p>
                            </div>
                            <div class="flat-button caption4 formLeft delay500 text-center"><a class="more" href="#">More Details</a></div>
                            <div class="flat-image formBottom delay200" data-bottom="true"><img src="~/Content/User/images/sl7.jpg" alt=""></div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="promotion-banner">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 col-sm-4 col-xs-4">
                            <div class="promo-box"><img src="~/Content/User/images/pr7.jpg" alt=""></div>
                        </div>
                        @*<div class="col-md-4 col-sm-4 col-xs-4">
                                <div class="promo-box"><img src="~/Content/User/images//pr8.jpg" alt=""></div>
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <div class="promo-box"><img src="~/Content/User/images//promotion-03.png" alt=""></div>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="container_fullwidth">
            <div class="container">

                @RenderBody()

            </div>
        </div>
        <div class="clearfix"></div>
        <div class="footer">
            <div class="footer-info">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="footer-logo"><a href="#"><img src="~/Content/User/images/logo2xoa.png" alt=""></a></div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <h4 class="title">Contact <strong>Info</strong></h4>
                            <p>118 Phạm Văn Đồng, Mai Dịch, Cầu Giấy, Hà Nội, Vietnam</p>
                            <p>Call Us : (084) 1900 1008</p>
                            <p>Email : DCxinhdep@gmail.com</p>
                        </div>
                       
                        <div class="col-md-3">
                            <h4 class="title">Get Our <strong>Newsletter </strong></h4>
