
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<!DOCTYPE html>
<html>
<head>

</head>
<body id="home">
    <div class="wrapper">
        <div class="clearfix"></div>
        <div class="hom-slider">
            <div class="promotion-banner">
                <div class="container">
                    <div class="row">

                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="container_fullwidth">
            <div class="container">
                <div class="hot-products">
                    <h3 class="title"><strong>Hot</strong> Products</h3>
                    <div class="control"><a id="prev_hot" class="prev" href="#">&lt;</a><a id="next_hot" class="next" href="#">&gt;</a></div>
                    <ul id="hot">
                        <li>
                            <div class="row">
                                @{
                                        List<DCCofee.Models.SanPham> data = (List<DCCofee.Models.SanPham>)ViewBag.HotProducts;
                                        for (int i = 0; i < data.Count; i++)
                                        {
                                            <div class="col-md-3 col-sm-6">
                                                <div class="products">
                                                    <div class="offer">- %20</div>
                                                    <div class="thumbnail"><a href="@Url.Action("Index","ChiTiet",new { id = data[i].Id }) "><img src="@data[i].AnhSP" alt="Product Name"></a></div>
                                                    <div class="productname">@data[i].TenSP</div>
                                                    <h4 class="price">@Html.FormatValue(data[i].DonGia,"{0:#,####}")</h4>
                                                    <div class="button_group">
                                                    <a href="/GioHang/AddToCart/@data[i].Id" class="button add-cart" type="button" >Add to cart</a>
                                                
                                                    <button class="button compare" type="button"><i class="fa fa-exchange"></i></button>
                                                    <button class="button wishlist" type="button"><i class="fa fa-heart-o"></i></button></div>
                                                </div>
                                            </div>


                                        }
                                    }
                                

                            
                </div>
                            </ul>
                    </div>
                <div class="clearfix"></div>
                <div class="featured-products">
                    <h3 class="title"><strong>Featured </strong> Products</h3>
                    <div class="control"><a id="prev_featured" class="prev" href="#">&lt;</a><a id="next_featured" class="next" href="#">&gt;</a></div>
                    <ul id="featured">
                        <li>
                            <div class="row">
                                @{
                                    
                                    for (int i = 0; i < data.Count; i++)
                                    {
                                        <div class="col-md-3 col-sm-6">
                                            <div class="products">
                                                <div class="offer">- %20</div>
                                                <div class="thumbnail"><a href="@Url.Action("Index","ChiTiet",new { id = data[i].Id }) "><img src="@data[i].AnhSP" alt="Product Name"></a></div>
                                                <div class="productname">@data[i].TenSP</div>
                                                <h4 class="price">@Html.FormatValue(data[i].DonGia, "{0:#,####}")</h4>
                                                <div class="button_group">
                                                    <a href="@Url.Action("Add to cart","GioHang",new { id = data[i].Id })" class="button add-cart" type="button">Add to cart</a>

                                                    <button class="button compare" type="button"><i class="fa fa-exchange"></i></button>
                                                    <button class="button wishlist" type="button"><i class="fa fa-heart-o"></i></button>
                                                </div>
                                            </div>
                                        </div>


                                    }
                                }
                            </div>
                        </li>
                        <li>
                            
                        </li>
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
    <!-- Bootstrap core JavaScript==================================================-->
    <script type="text/javascript" src="~/Content/User/css/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="~/Content/User/css/jquery.easing.1.3.js"></script>
    <script type="text/javascript" src="~/Content/User/css/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Content/User/css/jquery.sequence-min.js"></script>
    <script type="text/javascript" src="~/Content/User/css/jquery.carouFredSel-6.2.1-packed.js"></script>
    <script defer src="~/Content/User/css/jquery.flexslider.js"></script>
    <script type="text/javascript" src="~/Content/User/css/script.min.js"></script>
</body>
</html>