@model PagedList.IPagedList<DCCofee.Models.SanPham>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/Content/User/images/favicon.png">
    <title>
        Welcome to FlatShop
    </title>
    <link href="~/Content/User/css/bootstrap.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,300,300italic,400italic,500,700,500italic,100italic,100' rel='stylesheet' type='text/css'>
    <link href="~/Content/User/css/font-awesome.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/Content/User/css/flexslider.css" type="text/css" media="screen" />
    <link href="~/Content/User/css/style.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js">
    </script>
    <script src="https://oss.maxcdn.com/libs/respond.~/Content/User/js/1.3.0/respond.min.js">
    </script>
    <![endif]-->
</head>
<body>
    <div class="wrapper">
        <div class="clearfix">
        </div>
        <div class="container_fullwidth">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="category leftbar" style="display: flex; flex-direction: column;">
                            <h3 class="title">Tìm kiếm sản phẩm</h3>
                            <form action="@Url.Action("Index", "DanhMuc")" method="get">
                                <ul class="option" style="display: flex;">
                                    <li class="option-cart">
                                        <input style="margin-left: -15px; margin-right: 5px" type="text" name="searchInput" placeholder="Nhập từ khóa....">
                                    </li>
                                    <li id="search" class="search">
                                        <input style="background-color: #f7544a" class="search-submit" type="submit" value="">
                                    </li>
                                </ul>
                            </form>
                        </div>



                        <div class="fbl-box leftbar">
                            <h3 class="title">
                                Facebook
                            </h3>
                            <span class="likebutton">
                                <a href="#">
                                    <img src="~/Content/User/images/fblike.png" alt="">
                                </a>
                            </span>
                            <p>
                                12k people like DC Coffee.
                            </p>
                            <ul>
                                <li>
                                    <a href="#">
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                    </a>
                                </li>
                            </ul>
                            <div class="fbplug">
                                <a href="#">
                                    <span>
                                        <img src="~/Content/User/images/fbicon.png" alt="">
                                    </span>
                                    Facebook social plugin
                                </a>
                            </div>
                        </div>
                        <div class="leftbanner">
                            <img src="~/Content/User/images/pr8.jpg" alt="">
                        </div>
                    </div>
                    <div class="col-md-9">

                        <div class="clearfix">
                        </div>
                        <div class="products-list">
                            <ul class="products-listItem">
                                @foreach (var product in Model)
                                {
                                    <li class="products">
                                        <div class="thumbnail">
                                            <img src="~/Content/User/images/products/small/@product.AnhSP" alt="@product.TenSP">
                                        </div>
                                        <div class="product-list-description">
                                            <a href="@Url.Action("Index", "ChiTiet", new { id = product.Id })">
                                                <div class="productname">
                                                    @product.TenSP
                                                </div>
                                                <p>
                                                    <img src="~/Content/User/images/star.png" alt="">
                                                </p>
                                                <p>
                                                    @product.Mota
                                                </p>
                                                <div class="list_bottom">
                                                    <div class="price">
                                                        <span class="new_price">
                                                            @product.DonGia
                                                            <sup>đ</sup>
                                                        </span>
                                                    </div>
                                                    <div class="button_group">
                                                        <button class="button">
                                                            @if (Session["id"] != null)
                                                            {
                                                                @Html.ActionLink("Thêm giỏ hàng", "AddToCart", "GioHangTest", new { sanpham = product.Id }, "")
                                                            }
                                                            else
                                                            {
                                                                @Html.ActionLink("Thêm giỏ hàng", "DangNhap", "DangNhap")
                                                            }
                                                        </button>
                                                        <button class="button compare">
                                                            <i class="fa fa-exchange"></i>
                                                        </button>
                                                        <button class="button favorite">
                                                            <i class="fa fa-heart-o"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>


                        <div class="toolbar">
                            <div class="sorter bottom">


                                <div class="view-mode">
                                    Hiển thị :
                                    <select name="">
                                        <option value="3" selected>
                                            3
                                        </option>
                                        <option value="6">
                                            6
                                        </option>
                                        <option value="9">
                                            9
                                        </option>
                                    </select>
                                </div>
                            </div>
                            <div class="pager">
                                @Html.PagedListPager((IPagedList)ViewBag.ListProducts, page => Url.Action("Index", new { page }))
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix">
            </div>

        </div>
    </div>
    <div class="clearfix">
    </div>
    </div>
    <!-- Bootstrap core JavaScript==================================================-->
    <script type="text/javascript" src="~/Content/User/js/jquery-1.10.2.min.js">
    </script>
    <script type="text/javascript" src="~/Content/User/js/jquery.easing.1.3.js">
    </script>
    <script type="text/javascript" src="~/Content/User/js/bootstrap.min.js">
    </script>
    <script defer src="~/Content/User/js/jquery.flexslider.js">
    </script>
    <script type="text/javascript" src="~/Content/User/js/jquery.sequence-min.js">
    </script>
    <script type="text/javascript" src="~/Content/User/js/jquery.carouFredSel-6.2.1-packed.js">
    </script>
    <script type="text/javascript" src="~/Content/User/js/script.min.js">
    </script>
</body>
</html>