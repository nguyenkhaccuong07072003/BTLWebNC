@model IEnumerable<DCCofee.Models.DONHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAd.cshtml";
}





<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Đơn Hàng| Danh sách</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="~/Content/Admin/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/Admin/plugins/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Content/Admin/plugins/ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/Admin/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/Content/Admin/dist/css/skins/_all-skins.min.css">


    <!--css custom page-->
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Content/Admin/plugins/datatables/dataTables.bootstrap.css">

    <!--end css custom page-->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Đơn Hàng
                </h1>
                <ol class="breadcrumb">
                    <li><a href="/Admin/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li><a href="/Admin/DonHang/Index">Đơn Hàng</a></li>
                    <li class="active">Danh sách</li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box ">
                            <div class="box-header">
                                <h2>Danh sách đơn hàng</h2>
@*                                <a href="/Admin/DonHang/Create" class="btn btn-sm btn-success"><i class="fa fa-plus"> Thêm mới </i></a>*@
                            </div><!-- /.box-header -->

                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NguoiDung.HoTen)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NgayDat)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TrangThai)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TongTien)
                                    </th>

                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NguoiDung.HoTen)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgayDat)
                                </td>
                                <td>
                                  @{
                                        if (item.TrangThai == 0)
                                        {
                                            <span>Chưa thanh toán</span>
                                        }
                                        else if (item.TrangThai == 1)
                                        {
                                            <span>Đã thanh toán</span>
                                        }
                                        else
                                        {
                                            <span>Trạng thái không xác định</span>
                                        }
                                  }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TongTien)
                                </td>
                                <td>
                                    @*@Html.ActionLink("Sửa", "Update", new { id = item.Id }) |*@
                                    <a href="@Url.Action("Index", "CTDH", new { id = item.Id })">Chi Tiết</a> 
                                    @*@Html.ActionLink("Xóa", "Delete", new { id = item.Id })*@
                                </td>
                            </tr>
                                }

                            </table>
                        </div><!-- /.box -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->

    </div><!-- ./wrapper -->
    <!-- jQuery 2.1.4 -->
    <script src="~/Content/Admin/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="~/Content/Admin/bootstrap/js/bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="~/Content/Admin/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/Content/Admin/plugins/fastclick/fastclick.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/Admin/dist/js/app.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Content/Admin/dist/js/demo.js"></script>

    <!--script custom page-->
    <!-- DataTables -->
    <script src="~/Content/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/Admin/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/Admin/plugins/datatables/dataTables.alphabetSearch.js"></script>

    <!-- page script -->
    <!--end script custom page-->
</body>
</html>